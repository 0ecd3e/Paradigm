<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardExploreModule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="editUsername"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="390dp"
            android:layout_height="match_parent"
            android:onClick="editUsername">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cardExploreModuleImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:elevation="2dp"
                app:civ_border_color="@color/textBlack"
                app:civ_border_width="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_menu_gallery" />

            <TextView
                android:id="@+id/cardExploreModuleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@android:color/transparent"
                android:elevation="2dp"
                android:fontFamily="@font/roboto"
                android:paddingStart="4dp"
                android:paddingEnd="0dp"
                android:text="@string/default_module_name"
                android:textColor="@color/textBlack"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/cardExploreModuleImage"
                app:layout_constraintTop_toTopOf="@+id/cardExploreModuleImage" />

            <View
                android:id="@+id/divider_bar"
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@android:color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cardExploreModuleImage"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />

            <TextView
                android:id="@+id/cardExploreModuleDesc"
                android:layout_width="234dp"
                android:layout_height="73dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:elevation="2dp"
                android:paddingStart="4dp"
                android:paddingEnd="0dp"
                android:text="@string/default_description"
                app:layout_constraintStart_toEndOf="@+id/cardExploreModuleImage"
                app:layout_constraintTop_toBottomOf="@+id/cardExploreModuleName" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
