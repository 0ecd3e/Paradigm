<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/multiple_choice_question_pg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/multiple_choice_question_box"
        android:layout_width="330dp"
        android:layout_height="306dp"
        android:layout_marginTop="30dp"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:fontFamily="@font/roboto"
        android:paddingStart="8dp"
        android:text="Dummy Question.   "
        android:textColor="@color/textBlack"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/option_1"
        android:layout_width="330dp"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:fontFamily="@font/roboto"
        android:text="@string/default_option"
        android:textAlignment="center"
        android:textColor="@color/textBlack"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/multiple_choice_question_box" />

    <Button
        android:id="@+id/option_2"
        android:layout_width="330dp"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="27dp"
        android:background="@android:color/white"
        android:clickable="true"
        android:fontFamily="@font/roboto"
        android:text="@string/default_option"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/option_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option_1" />

    <Button
        android:id="@+id/option_3"
        android:layout_width="330dp"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:fontFamily="@font/roboto"
        android:text="@string/default_option"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option_2" />

    <Button
        android:id="@+id/option_4"
        android:layout_width="330dp"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:fontFamily="@font/roboto"
        android:text="@string/default_option"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option_3" />

    <TextView
        android:id="@+id/section_quiz_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/roboto"
        android:scrollbarThumbHorizontal="@color/textBlack"
        android:text="@string/quiz_score"
        android:textColor="@color/textBlack"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option_4" />

</androidx.constraintlayout.widget.ConstraintLayout>
